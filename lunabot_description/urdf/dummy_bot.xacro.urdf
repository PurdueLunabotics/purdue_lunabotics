<?xml version="1.0"?>
<robot name="dummy_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="silver">
    <color rgba="0.75 0.75 0.75 1"/>
  </material>
  <link name="base_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="50.0"/>
      <inertia  ixx="3.416666667" ixy = "0" ixz = "0"
        iyy="3.416666667" iyz = "0"
        izz="3.416666667"
      />
    </inertial>
    <visual>
      <origin rpy="3.14 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.9 0.5 0.1"/>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/realistic_robot.stl"/> -->
      </geometry>
      <material name="silver"/>
    </visual>

    <collision>
      <origin rpy="3.14 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.9 0.5 0.1"/>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/realistic_robot.stl"/> -->
      </geometry>
    </collision>
  </link>

  <link name="middle_link"/>

  <joint name="mid_joint" type="fixed">
    <origin rpy="0 0 3.14" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="middle_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- left front -->
  <link name="left_front">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="5.0"/>
      <inertia  ixx="0.056510417" ixy = "0" ixz = "0"
        iyy="0.056510417" iyz = "0"
        izz="0.1"
      />
    </inertial>

    <visual>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/robot_wheel.stl"/> -->
      <cylinder radius="0.2" length="0.125"/>
      </geometry>
      <material name="silver"/>
    </visual>

    <collision>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/robot_wheel.stl"/> -->
      <cylinder radius="0.2" length="0.125"/>
      </geometry>
      <!-- <surface> -->
        <!-- <friction> -->
          <!-- <ode> -->
            <!-- <mu>0.01</mu> -->
            <!-- <mu2>0.01</mu2> -->
          <!-- </ode> -->
        <!-- </friction> -->
      <!-- </surface> -->
    </collision>
  </link>

  <joint name="left_front_rev" type="continuous">
    <origin rpy="0 0 0" xyz="-0.292 -0.35 -0.162"/>
    <parent link="middle_link"/>
    <child link="left_front"/>
    <axis xyz="0 1 0"/>
    <!-- <limit effort="10.0" velocity="100.0"/> -->
  </joint>

  <!-- left back -->
  <link name="left_back">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="5.0"/>
      <inertia  ixx="0.056510417" ixy = "0" ixz = "0"
        iyy="0.056510417" iyz = "0"
        izz="0.1"
      />
    </inertial>

    <visual>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/robot_wheel.stl"/> -->
      <cylinder radius="0.2" length="0.125"/>
      </geometry>
      <material name="silver"/>
    </visual>

    <collision>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/robot_wheel.stl"/> -->
      <cylinder radius="0.2" length="0.125"/>
      </geometry>
      <!-- <surface> -->
        <!-- <friction> -->
          <!-- <ode> -->
            <!-- <mu>0.01</mu> -->
            <!-- <mu2>0.01</mu2> -->
          <!-- </ode> -->
        <!-- </friction> -->
      <!-- </surface> -->
    </collision>
  </link>

  <joint name="left_back_rev" type="continuous">
    <origin rpy="0 0 0" xyz="0.217 -0.35 -0.162"/>
    <parent link="middle_link"/>
    <child link="left_back"/>
    <axis xyz="0 1 0"/>
    <!-- <limit effort="10.0" velocity="100.0"/> -->
  </joint>

  <!-- right front -->
  <link name="right_front">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="5.0"/>
      <inertia  ixx="0.056510417" ixy = "0" ixz = "0"
        iyy="0.056510417" iyz = "0"
        izz="0.1"
      />
    </inertial>

    <visual>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/robot_wheel.stl"/> -->
      <cylinder radius="0.2" length="0.125"/>
      </geometry>
      <material name="silver"/>
    </visual>

    <collision>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/robot_wheel.stl"/> -->
      <cylinder radius="0.2" length="0.125"/>
      </geometry>
      <!-- <surface> -->
        <!-- <friction> -->
          <!-- <ode> -->
            <!-- <mu>0.01</mu> -->
            <!-- <mu2>0.01</mu2> -->
          <!-- </ode> -->
        <!-- </friction> -->
      <!-- </surface> -->
    </collision>
  </link>

  <joint name="right_front_rev" type="continuous">
    <origin rpy="0 0 0" xyz="-0.292 0.22 -0.162"/>
    <parent link="middle_link"/>
    <child link="right_front"/>
    <axis xyz="0 1 0"/>
    <!-- <limit effort="10.0" velocity="100.0"/> -->
  </joint>

  <!-- right back -->
  <link name="right_back">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="5.0"/>
      <inertia  ixx="0.056510417" ixy = "0" ixz = "0"
        iyy="0.056510417" iyz = "0"
        izz="0.1"
      />
    </inertial>

    <visual>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/robot_wheel.stl"/> -->
      <cylinder radius="0.2" length="0.125"/>
      </geometry>
      <material name="silver"/>
    </visual>

    <collision>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
      <!-- <mesh filename="file://$(find mining_arena_gazebo)/models/realistic_robot/robot_wheel.stl"/> -->
      <cylinder radius="0.2" length="0.125"/>
      </geometry>
      <!-- <surface> -->
        <!-- <friction> -->
          <!-- <ode> -->
            <!-- <mu>0.01</mu> -->
            <!-- <mu2>0.01</mu2> -->
          <!-- </ode> -->
        <!-- </friction> -->
      <!-- </surface> -->
    </collision>
  </link>

  <joint name="right_back_rev" type="continuous">
    <origin rpy="0 0 0" xyz="0.217 0.22 -0.162"/>
    <parent link="middle_link"/>
    <child link="right_back"/>
    <axis xyz="0 1 0"/>
    <!-- <limit effort="10.0" velocity="100.0"/> -->
  </joint>


  <!-- Back Camera -->
  <link name="d455_back_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia 
        ixx="0.001" 
        ixy="0.000" 
        ixz="0.000"
        iyy="0.001"
        iyz="0.000"
        izz="0.001"
      />
      <mass value="0.035"/>
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.03 0.1 0.03" />
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.03 0.1 0.03" />
      </geometry>
    </visual>
  </link>

  <link name="d455_back_rgb_link">
  </link>
  <link name="d455_back_depth_link">
  </link>  

  <joint name="d455_back_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.39 -0.05 0.215"/>
    <parent link="middle_link"/>
    <child link="d455_back_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="d455_back_rgb_joint" type="fixed">
    <!-- these values have to be these values otherwise the gazebo camera
        image won't be aligned properly with the frame it is supposedly
        originating from -->
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    <parent link="d455_back_link"/>
    <child link="d455_back_rgb_link"/>
  </joint>

  <joint name="d455_back_depth_joint" type="fixed">
    <!-- these values have to be these values otherwise the gazebo camera
        image won't be aligned properly with the frame it is supposedly
        originating from -->
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    <parent link="d455_back_link"/>
    <child link="d455_back_depth_link"/>
  </joint>

  <gazebo reference="d455_back_link">
    <sensor name="d455_back_rgb" type="camera">
      <always_on>1</always_on>
      <visualize>false</visualize>
      <update_rate>15</update_rate>
      <topic>d455_back/color/image_raw</topic>
      <gz_frame_id>d455_back_rgb_link</gz_frame_id>
      <camera name="d455_back_rgb">
        <camera_info_topic>d455_back/color/camera_info</camera_info_topic>
        <horizontal_fov>1.50098</horizontal_fov>
        <image>
          <width>424</width>
          <height>240</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>3</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>

  <gazebo reference="d455_back_link">
    <sensor name="d455_back_depth" type="depth_camera">
      <always_on>1</always_on>
      <visualize>false</visualize>
      <update_rate>15</update_rate>
      <topic>d455_back/depth/image_raw</topic>
      <gz_frame_id>d455_back_depth_link</gz_frame_id>
      <camera name="d455_back_depth">
        <camera_info_topic>d455_back/depth/camera_info</camera_info_topic>
        <horizontal_fov>1.50098</horizontal_fov>
        <image>
          <width>424</width>
          <height>240</height>
          <format>R_FLOAT32</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>3</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>

  <!-- Front Camera -->


  <link name="d455_front_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia 
        ixx="0.001" 
        ixy="0.000" 
        ixz="0.000"
        iyy="0.001"
        iyz="0.000"
        izz="0.001"
      />
      <mass value="0.035"/>
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.03 0.1 0.03" />
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.03 0.1 0.03" />
      </geometry>
    </visual>
  </link>

  <link name="d455_front_rgb_link">
  </link>
  <link name="d455_front_depth_link">
  </link>  

  <joint name="d455_front_joint" type="fixed">
    <origin rpy="0 0 3.14" xyz="-0.55 0.15 0"/>
    <parent link="middle_link"/>
    <child link="d455_front_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="d455_front_rgb_joint" type="fixed">
    <!-- these values have to be these values otherwise the gazebo camera
        image won't be aligned properly with the frame it is supposedly
        originating from -->
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    <parent link="d455_front_link"/>
    <child link="d455_front_rgb_link"/>
  </joint>

  <joint name="d455_front_depth_joint" type="fixed">
    <!-- these values have to be these values otherwise the gazebo camera
        image won't be aligned properly with the frame it is supposedly
        originating from -->
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    <parent link="d455_front_link"/>
    <child link="d455_front_depth_link"/>
  </joint>

  <gazebo reference="d455_front_link">
    <sensor name="d455_front_rgb" type="camera">
      <always_on>1</always_on>
      <visualize>false</visualize>
      <update_rate>15</update_rate>
      <topic>d455_front/color/image_raw</topic>
      <gz_frame_id>d455_front_rgb_link</gz_frame_id>
      <camera name="d455_front_rgb">
        <camera_info_topic>d455_front/color/camera_info</camera_info_topic>
        <horizontal_fov>1.50098</horizontal_fov>
        <image>
          <width>424</width>
          <height>240</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>5</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>

  <gazebo reference="d455_front_link">
    <sensor name="d455_front_depth" type="depth_camera">
      <always_on>1</always_on>
      <visualize>false</visualize>
      <update_rate>15</update_rate>
      <topic>d455_front/depth/image_raw</topic>
      <gz_frame_id>d455_front_depth_link</gz_frame_id>
      <camera name="d455_front_depth">
        <camera_info_topic>d455_front/depth/camera_info</camera_info_topic>
        <horizontal_fov>1.50098</horizontal_fov>
        <image>
          <width>424</width>
          <height>240</height>
          <format>R_FLOAT32</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>5</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>

  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="left_front_rev">
      <command_interface name="velocity">
        <param name="min">-15</param>
        <param name="max">15</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="left_back_rev">
      <command_interface name="velocity">
        <param name="min">-15</param>
        <param name="max">15</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="right_front_rev">
      <command_interface name="velocity">
        <param name="min">-15</param>
        <param name="max">15</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="right_back_rev">
      <command_interface name="velocity">
        <param name="min">-15</param>
        <param name="max">15</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <xacro:include filename="$(find lunabot_description)/urdf/dummy_bot.trans" />
  <gazebo>

    <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <parameters>$(find lunabot_description)/config/controller.yaml</parameters>
        <controller_manager_prefix_node_name>controller_manager</controller_manager_prefix_node_name>
    </plugin>

    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
        <topic>joint_states</topic>
        <joint_name>left_front_rev</joint_name>
        <joint_name>left_back_rev</joint_name>
        <joint_name>right_front_rev</joint_name>
        <joint_name>right_back_rev</joint_name>
    </plugin>
    
  </gazebo>


</robot>
